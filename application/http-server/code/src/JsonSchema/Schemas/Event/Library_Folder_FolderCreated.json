{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "eventId": {
      "$ref": "Event/Shared/GaleasIdString.json"
    },
    "aggregateId": {
      "$ref": "Event/Shared/GaleasIdString.json"
    },
    "authorizerId": {
      "$ref": "Event/Shared/GaleasIdString.json"
    },
    "sourceEventId": {
      "$ref": "Event/Shared/GaleasIdNull.json"
    },
    "eventOccurredOn": {
      "$ref": "Event/Shared/GaleasDateNoTimezoneString.json"
    },
    "eventName": {
      "$ref": "Event/Shared/GaleasEventNameString.json"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "parent": {
          "oneOf": [
            {"type": "null"},
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["galeas_id"]
                },
                "id": {
                  "type": "string",
                  "minLength": 56,
                  "maxLength": 56,
                  "pattern": "^[0-9a-zA-Z\\-_]+$"
                }
              },
              "required": [
                "type",
                "id"
              ]
            }
          ]
        },
        "ownerId": {
          "$ref": "Event/Shared/GaleasIdObject.json"
        },
        "deleted": {
          "type": "boolean"
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  },
  "required": [
    "eventId",
    "aggregateId",
    "authorizerId",
    "sourceEventId",
    "eventOccurredOn",
    "eventName",
    "payload",
    "metadata"
  ]
}
