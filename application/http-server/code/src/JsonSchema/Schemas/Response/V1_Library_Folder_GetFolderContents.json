{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "folder": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "parent": {
          "type": ["null", "string"]
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "parent"
      ]
    },
    "childrenFolders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "name"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "folder",
    "childrenFolders"
  ]
}

