      "$ref": "Event/Shared/IdString.json"
    },
    "aggregateId": {
      "$ref": "Event/Shared/IdString.json"
    },
    "authorizerId": {
      "$ref": "Event/Shared/IdString.json"
    },
    "causationId": {
      "$ref": "Event/Shared/IdString.json"
    },
    "correlationId": {
      "$ref": "Event/Shared/IdString.json"
